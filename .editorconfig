root = true

[*]
charset = utf-8
end_of_line = unset
indent_size = 4
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_size = 2

[*.{csproj,props}]
indent_size = 2

[*.cs]
# Use "Async" suffix in names of methods that return an awaitable type.
dotnet_diagnostic.vsthrd200.severity = none
